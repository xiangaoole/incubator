<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_home_height"
        app:banner_indicator_gravity="right"
        app:banner_indicator_marginBottom="@dimen/dp_12"
        app:banner_indicator_marginRight="@dimen/dp_5"
        app:banner_indicator_normal_color="@color/white"
        app:banner_indicator_selected_color="@color/colorPrimary"
        app:banner_radius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>